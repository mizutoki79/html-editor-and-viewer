{
    "manifest_version": 2,
    "name": "html-editor-and-viewer",
    "version": "0.0.1",
    "author": "mizutoki79",
    "permissions": [
        "storage",
        "tabs",
        "webNavigation",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.bundle.js"],
        "persistent": false
    },
    "browser_action": {
        "name": "html-editor-and-viewer"
    },
    "content_security_policy": "script-src 'self' 'unsafe-inline' 'unsafe-eval'",
    "sandbox": ["index.html", "editor.html", "viewer.html"]
}
